{
  "name": "@newyork.anthonyng/react-transport",
  "version": "0.0.0-development",
  "description": "Transport React element to document.body",
  "main": "build/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "watch:test": "npm run test -- --watch",
    "cover": "npm run test -- --coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "portal",
    "react"
  ],
  "author": "Anthony Ng <newyork.anthonyng@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "commitizen": "^2.9.2",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.6.0",
    "ghooks": "^2.0.0",
    "jest": "^18.0.0",
    "react-addons-test-utils": "^15.4.1",
    "semantic-release": "^6.3.2",
    "webpack": "^1.14.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/newyork-anthonyng/react-transport.git"
  }
}
